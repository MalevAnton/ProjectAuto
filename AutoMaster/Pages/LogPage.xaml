<Page x:Class="AutoMaster.Pages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoMaster.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
        <StackPanel>
            <GroupBox Header="Введите логин">
                <TextBox Name="tboxLogin">Anton</TextBox>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="pbPassword" Password="111111"></PasswordBox>
            </GroupBox>
            <Button Click="Button_Click">Авторизация</Button>
            <Button Name="btnCancel" Click="btnCancel_Click">Отмена</Button>
            
        </StackPanel>
    </Grid>
</Page>
